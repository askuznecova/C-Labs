#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double x; // Переменная для хранения значения x
    double epsilon = 1e-6; // Заданная точность
    double sum = 0.0; // Переменная для хранения суммы ряда
    double term; // Текущий член ряда
    int k = 1; // Номер текущего члена ряда


    do {
        term = pow(-1, k) / (sin(k * x) + 5 + k * k); // Вычисляем текущий член ряда
        sum += term; // Прибавляем его к сумме
        k++; // Переходим к следующему члену
    } while (fabs(term) > epsilon); // Повторяем, пока текущий член больше заданной точности

    // Вывод результата
    cout << "Сумма ряда: " << sum << endl;

    return 0;
}
