#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double epsilon = 1e-6; // Заданная точность
    double sum = 0.0; // Переменная для хранения суммы
    double term1, term2; // Текущие члены ряда
    int k = 1; // Номер текущего члена ряда

    do {
        term1 = 5.0 / pow(2, k - 1); // Вычисляем первый член ряда
        term2 = pow(-1, k - 1) / (2.0 * pow(3, k - 1)); // Вычисляем второй член ряда
        sum += term1 + term2; // Прибавляем их к сумме
        k++; // Переходим к следующему члену
    } while (fabs(term1 + term2) > epsilon); // Повторяем, пока текущий член больше заданной точности

    // Вывод результата
    cout << "Сумма ряда: " << sum << endl;

    return 0;
}
